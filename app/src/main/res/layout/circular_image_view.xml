<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.greenv.pt_upax_gccv.ux.image.CustomCircularView
        android:id="@+id/circularImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
<!--        app:backgroundColor="@color/backgroundColor"-->
<!--        app:placeholder="@drawable/placeholder_image"-->
<!--        app:textColor="@color/textColor"-->
        />

    <Button
        android:id="@+id/changeBackgroundButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Fondo" />

    <Button
        android:id="@+id/changeTextColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Color Texto" />

    <Button
        android:id="@+id/changePlaceholderButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Placeholder" />


</LinearLayout>